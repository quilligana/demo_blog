<h1>Blog Articles</h1>
 
<span><%= link_to 'New Article', new_post_path %></span>

<div class = 'post-container'> 
<% @posts.each do |post| %>
  <div class = 'post'>
    <h3><%= post.title %></h3>
    <p><%= post.text %></p>
    <p>
      <%= link_to 'Show', post_path(post) %>
      <%= link_to 'Edit', edit_post_path(post) %>
      <%= link_to 'Destroy', post_path(post),
                    method: :delete, data: { confirm: 'Are you sure?' } %>
    </p>
  </div>
<% end %>
</div>